<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <RadioGroup
        android:id="@+id/layout_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btnXinpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_menu_item_new_good"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="新品"
            android:textColor="@color/main_botton_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/btnJingxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_menu_item_boutique"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="精选"
            android:textColor="@color/main_botton_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/btnFenlei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_menu_item_category"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="分类"
            android:textColor="@color/main_botton_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/btnGouwuche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_menu_item_cart"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="购物车"
            android:textColor="@color/main_botton_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/btnGeren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_menu_item_personal_center"

            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="我"
            android:textColor="@color/main_botton_text_color"
            android:textSize="18sp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_item_bottom">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
